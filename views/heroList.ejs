<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>Super Hero Database</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h1 class="mb-4">
            <i class="bi bi-stars me-2"></i> Super Hero Database
        </h1>

        <% if (heroes && heroes.length > 0) { %>
            <div class="row">
                <% heroes.forEach(function(hero) { %>
                    <div class="col-md-6 col-lg-4" id="hero-<%= hero.id %>">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">

                                <!-- Display Mode -->
                                <div class="hero-display" id="display-<%= hero.id %>">
                                    <h5 class="card-title">
                                        <i class="bi bi-mask me-2"></i> <%= hero.superName %>
                                    </h5>
                                    <p class="card-text">
                                        <strong>Real Name:</strong> <%= hero.realName %><br>
                                        <strong>Power:</strong> <%= hero.superpower %><br>
                                        <strong>Level:</strong>
                                        <span class="badge bg-warning text-dark"><%= hero.powerLevel %>/10</span><br>
                                        <strong>Secret Identity:</strong>
                                        <% if (hero.secretIdentity) { %>
                                            <i class="bi bi-lock-fill text-danger"></i> Yes
                                        <% } else { %>
                                            <i class="bi bi-unlock-fill text-success"></i> No
                                        <% } %>
                                    </p>
                                    <div class="d-flex gap-2">
                                        <button class="btn btn-sm btn-outline-primary" onclick="editHero('<%= hero.id %>')">
                                            <i class="bi bi-pencil"></i> Edit
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger" onclick="deleteHero('<%= hero.id %>')">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </div>
                                </div>

                                <!-- Edit Mode -->
                                <div class="hero-edit" id="edit-<%= hero.id %>" style="display:none;">
                                    <input type="text" class="form-control mb-2" id="superName-<%= hero.id %>" value="<%= hero.superName %>" placeholder="Super Hero Name">
                                    <input type="text" class="form-control mb-2" id="realName-<%= hero.id %>" value="<%= hero.realName %>" placeholder="Real Name">
                                    <input type="text" class="form-control mb-2" id="superPower-<%= hero.id %>" value="<%= hero.superpower %>" placeholder="Super Power">
                                    <input type="text" class="form-control mb-2" id="powerLevel-<%= hero.id %>" value="<%= hero.powerLevel %>" placeholder="Power Level">
                                    
                                    <div class="form-check mb-2">
                                        <input type="checkbox" class="form-check-input" id="secretIdentity-<%= hero.id %>" <%= hero.secretIdentity ? 'checked' : '' %>>
                                        <label class="form-check-label" for="secretIdentity-<%= hero.id %>">Secret Identity</label>
                                    </div>

                                    <div class="d-flex gap-2">
                                        <button class="btn btn-sm btn-success" onclick="updateHero('<%= hero.id %>')">
                                            <i class="bi bi-check"></i> Save
                                        </button>
                                        <button class="btn btn-sm btn-secondary" onclick="cancelEdit('<%= hero.id %>')">
                                            <i class="bi bi-x"></i> Cancel
                                        </button>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="alert alert-info text-center">No heroes in the list</div>
        <% } %>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/scripts/heroActions.js"></script>
</body>
</html>
